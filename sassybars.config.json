{
  "SERVER_PORT": 8080,
  "OUTPUT_DIRECTORY": "dist",
  "CLEAN_OUTPUT_DIR": true,
  "DATA_FILE": "./src/data.json",
  "OUTPUT_STYLE_FILENAME": "style.css",
  "OUTPUT_SCRIPT_FILENAME": "script.js",
  "STYLE_INDEX": "./src/styles/index.scss",
  "SCRIPT_INDEX": "./src/scripts/index.js",
  "PAGES_GLOB": "./src/pages/*.html",
  "ASSETS_GLOB": "./src/assets/**/*.*",
  "SCRIPTS_GLOB": "./src/scripts/*.js",
  "STYLES_GLOB": "./src/styles/*.scss",
  "PARTIALS_GLOB": "./src/partials/*.html",
  "LIVERELOAD_GLOB": "./src/**/*.*",
  "USE_HTML_TIDY": true,
  "USE_HTML_MIN": true,
  "HTML_TIDY_OPTIONS": {
    "indent": "auto",
    "tidyMark": "no",
    "indentSpaces": 2,
    "wrap": 80
  },
  "HTML_MIN_OPTIONS": {
    "collapseWhitespace": true,
    "minifyCSS": true
  }
}
